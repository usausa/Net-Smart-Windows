<Project Sdk="Microsoft.NET.Sdk.WindowsDesktop">

  <PropertyGroup>
    <TargetFramework>netcoreapp3.1</TargetFramework>
    <UseWPF>true</UseWPF>
    <CodeAnalysisRuleSet>..\Smart.Windows.ruleset</CodeAnalysisRuleSet>
    <RootNamespace>Smart</RootNamespace>
  </PropertyGroup>

  <PropertyGroup>
    <PackageId>Usa.Smart.Windows</PackageId>
    <Title>Smart.Windows .NET</Title>
    <Description>Smart WPF support library for .NET</Description>
    <Summary>Smart WPF support library for .NET</Summary>
    <PackageTags>smart wpf mvvm</PackageTags>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Xaml.Behaviors.Wpf" Version="1.1.31" />
    <PackageReference Include="Usa.Smart.Converter" Version="1.0.0-beta1" />
    <PackageReference Include="Usa.Smart.Core" Version="2.0.0-beta1" />
  </ItemGroup>

</Project>